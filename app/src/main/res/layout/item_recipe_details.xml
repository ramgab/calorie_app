<!-- res/layout/item_breakfast_details.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    app:cardCornerRadius="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="5dp"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/dark_grey"

            app:cardCornerRadius="15dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/blocks"
                    app:cardCornerRadius="15dp"
                    >

                    <androidx.constraintlayout.widget.ConstraintLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/textViewProductNameLayoutRecipe"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            tools:ignore="MissingConstraints">
                            <TextView
                                android:id="@+id/textViewProductNameRecipe"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:text="Название"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="5dp"/>
                        </LinearLayout>



                        <TextView
                            android:id="@+id/textViewCaloriesRecipe"
                            android:layout_width="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/textViewProductNameLayoutRecipe"
                            android:paddingTop="5dp"
                            android:paddingLeft="10dp"
                            android:textSize="14dp"
                            android:textColor="@color/grey"
                            android:layout_height="wrap_content"
                            tools:ignore="MissingConstraints" />


                        <TextView
                            android:id="@+id/textViewGramsRecipe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/textViewProductNameLayoutRecipe"
                            app:layout_constraintLeft_toRightOf="@+id/textViewCaloriesRecipe"
                            android:textColor="@color/grey"
                            android:paddingTop="5dp"
                            android:paddingLeft="5dp"
                            android:textSize="14dp"/>


                        <TextView
                            android:id="@+id/textViewProteinRecipe"
                            android:layout_width="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/textViewCaloriesRecipe"
                            android:textColor="@color/grey"
                            android:paddingTop="5dp"
                            android:paddingLeft="10dp"
                            android:textSize="14dp"
                            android:layout_height="wrap_content"
                            tools:ignore="MissingConstraints" />

                        <TextView
                            android:id="@+id/textViewFatRecipe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/textViewCaloriesRecipe"
                            app:layout_constraintLeft_toRightOf="@+id/textViewProteinRecipe"
                            android:textColor="@color/grey"
                            android:paddingTop="5dp"
                            android:paddingLeft="10dp"
                            android:textSize="14dp"/>

                        <TextView
                            android:id="@+id/textViewCarbohydrateRecipe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/textViewCaloriesRecipe"
                            app:layout_constraintLeft_toRightOf="@+id/textViewFatRecipe"
                            android:textColor="@color/grey"
                            android:paddingTop="5dp"
                            android:paddingLeft="10dp"
                            android:textSize="14dp"/>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardViewForProteinRecipe"
                            android:layout_width="0dp"
                            android:layout_height="5dp"
                            app:cardCornerRadius="15dp"
                            android:backgroundTint="@color/protein"
                            app:layout_constraintTop_toBottomOf="@id/textViewProteinRecipe"
                            app:layout_constraintStart_toStartOf="@id/textViewProteinRecipe"
                            app:layout_constraintEnd_toEndOf="@id/textViewProteinRecipe"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="10dp"

                            android:layout_marginBottom="5dp"
                            tools:ignore="MissingConstraints" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardViewForFatRecipe"
                            android:layout_width="0dp"
                            android:layout_height="5dp"
                            app:cardCornerRadius="15dp"
                            android:backgroundTint="@color/fat"
                            app:layout_constraintTop_toBottomOf="@id/textViewFatRecipe"
                            app:layout_constraintStart_toStartOf="@id/textViewFatRecipe"
                            app:layout_constraintEnd_toEndOf="@id/textViewFatRecipe"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="10dp"

                            android:layout_marginBottom="5dp"
                            tools:ignore="MissingConstraints" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardViewForCarbRecipe"
                            android:layout_width="0dp"
                            android:layout_height="5dp"
                            app:cardCornerRadius="15dp"
                            android:backgroundTint="@color/carb"
                            app:layout_constraintTop_toBottomOf="@id/textViewCarbohydrateRecipe"
                            app:layout_constraintStart_toStartOf="@id/textViewCarbohydrateRecipe"
                            app:layout_constraintEnd_toEndOf="@id/textViewCarbohydrateRecipe"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="10dp"

                            android:layout_marginBottom="5dp"
                            tools:ignore="MissingConstraints" />


                        <ImageView
                            android:id="@+id/deleteButtonRecipe"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/icon_del"
                            android:layout_gravity="end"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_marginRight="10dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            app:layout_constraintTop_toBottomOf="@id/cardViewForCarbRecipe"
                            android:layout_height="10dp">

                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
