<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView android:layout_width="match_parent"
    android:id="@+id/nestedscrollview_home"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.dashboard.HomeFragment"
    android:background="@color/dark_grey"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/black">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_head_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/shape4">

             <TextView
                android:id="@+id/hello"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Привет,"
                android:textColor="@color/white"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="5dp"
                android:textSize="22dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints">

            </TextView>

            <TextView
                android:id="@+id/person_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/hello"
                android:textColor="@android:color/white"
                android:paddingTop="10dp"
                android:textSize="22dp"
                android:text="пользователь"
                android:textStyle="bold"
                tools:ignore="MissingConstraints">
            </TextView>

            <ImageView
                android:id="@+id/image_draw"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/draw"
                app:layout_constraintTop_toTopOf="@id/hello"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                tools:ignore="MissingConstraints" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_person_info_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/layout_head_home"
            android:background="@drawable/shape_3">



            <TextView
                android:id="@+id/text_calorie_norm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:paddingTop="5dp"
                android:text="Ваша норма калорий:"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/white"
                tools:ignore="MissingConstraints">
            </TextView>

            <TextView
                android:id="@+id/calorie_norm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/text_calorie_norm"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/white"
                tools:ignore="MissingConstraints">
            </TextView>

            <LinearLayout
                android:id="@+id/layout_for_person_info_1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/calorie_norm"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">


                <LinearLayout
                    android:id="@+id/gender_layout"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    app:layout_constraintTop_toBottomOf="@+id/person_name">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/blocks"
                        app:cardCornerRadius="15dp"
                        android:layout_margin="5dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/gender_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="18dp"
                                android:textStyle="bold"
                                android:text="Пол"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"/>

                            <TextView
                                android:id="@+id/genderValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="16dp"
                                android:text="Неизвестно"
                                app:layout_constraintTop_toBottomOf="@id/gender_text"
                                android:paddingLeft="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/age_layout"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    app:layout_constraintTop_toBottomOf="@+id/person_name">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/blocks"
                        app:cardCornerRadius="15dp"
                        android:layout_margin="5dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/age_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="18dp"
                                android:textStyle="bold"
                                android:text="Возраст"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"/>

                            <TextView
                                android:id="@+id/ageValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="16dp"
                                android:text="Неизвестно"
                                app:layout_constraintTop_toBottomOf="@id/age_text"
                                android:paddingLeft="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>



                    </androidx.cardview.widget.CardView>
                </LinearLayout>




            </LinearLayout>



            <LinearLayout
                android:id="@+id/layout_for_person_info_2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/layout_for_person_info_1"

                android:orientation="horizontal"
                tools:ignore="MissingConstraints">




                <LinearLayout
                    android:id="@+id/height_layout"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    app:layout_constraintTop_toBottomOf="@+id/person_name">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/blocks"
                        app:cardCornerRadius="15dp"
                        android:layout_margin="5dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/height_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="18dp"
                                android:textStyle="bold"
                                android:text="Рост"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"/>

                            <TextView
                                android:id="@+id/heightValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="16dp"
                                android:text="Неизвестно"
                                app:layout_constraintTop_toBottomOf="@id/height_text"
                                android:paddingLeft="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/weight_layout"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/blocks"
                        app:cardCornerRadius="15dp"
                        android:layout_margin="5dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/weight_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="18dp"
                                android:textStyle="bold"
                                android:text="Вес"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"/>

                            <TextView
                                android:id="@+id/weightValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="16dp"
                                android:text="Неизвестно"
                                app:layout_constraintTop_toBottomOf="@id/weight_text"
                                android:paddingLeft="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_layout"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                tools:ignore="MissingConstraints"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/layout_for_person_info_2"
                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewTraining"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/blocks"


                    app:cardCornerRadius="15dp"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:text="Коэффициент активности">

                    </TextView>

                    <TextView
                        android:id="@+id/activityValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="Неизвестно"
                        android:layout_gravity="center_vertical"

                        android:textSize="16dp">

                    </TextView>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"
                app:layout_constraintTop_toBottomOf="@+id/activity_layout"
                tools:ignore="MissingConstraints">
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_stat_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/layout_person_info_home"
            android:background="@drawable/shape_3">

            <TextView
                android:id="@+id/text_stat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="Статистика"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"

                android:textSize="20sp"
                android:textColor="@color/white"
                tools:ignore="MissingConstraints">
            </TextView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_chart_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:layout_constraintTop_toBottomOf="@id/text_stat"
                android:background="@drawable/shape_5">

                <TextView
                    android:id="@+id/text_chart_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="Как менялся ваш вес:"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    tools:ignore="MissingConstraints">
                </TextView>


                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/weightChart"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="5dp"

                    app:layout_constraintTop_toBottomOf="@+id/text_chart_weight"
                    tools:ignore="MissingConstraints" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_chart_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:layout_constraintTop_toBottomOf="@id/layout_chart_1"
                android:background="@drawable/shape_5">

                <TextView
                    android:id="@+id/text_bar_chart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:paddingTop="5dp"
                    android:text="Сумма калорий за каждый день:"

                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    tools:ignore="MissingConstraints">
                </TextView>

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/caloriesChart"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    app:layout_constraintTop_toBottomOf="@+id/text_bar_chart"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_chart_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:layout_constraintTop_toBottomOf="@id/layout_chart_2"
                android:background="@drawable/shape_5">


                <TextView
                    android:id="@+id/text_bar_chart_privichki"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:paddingTop="5dp"
                    android:text="Ваши пищевые привычки: "

                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    tools:ignore="MissingConstraints">
                </TextView>


                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/topCategoriesChart"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/text_bar_chart_privichki"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:layout_constraintTop_toBottomOf="@+id/layout_chart_3"
                tools:ignore="MissingConstraints" />
        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>