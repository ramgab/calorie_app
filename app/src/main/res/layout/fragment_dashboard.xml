<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/nestedscrollview_dashboard"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.dashboard.DashboardFragment"
    android:background="@color/dark_grey"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/dark_grey">


        <LinearLayout
            android:id="@+id/layout_for_date_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:backgroundTint="@color/newColor"
                app:cardCornerRadius="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/currentDateTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="01.01.2023"
                    android:textColor="@color/dark_grey"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textSize="14sp" />
            </androidx.cardview.widget.CardView>



        </LinearLayout>




        <DatePicker
            android:id="@+id/datePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:datePickerMode="calendar"
            android:calendarViewShown="false"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/layout_for_date_today"
            android:visibility="gone"
            tools:ignore="MissingConstraints" />


        <HorizontalScrollView
            android:id="@+id/stoies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/datePicker"
            android:scrollbars="none"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:id="@+id/story"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                android:layout_marginTop="5dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/story1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:backgroundTint="@color/blocks"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:enterFadeDuration="1000"
                    android:exitFadeDuration="5000"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="5dp" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/story2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:backgroundTint="@color/blocks"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:enterFadeDuration="1000"
                    android:exitFadeDuration="5000"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="5dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/story3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:backgroundTint="@color/blocks"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:enterFadeDuration="1000"
                    android:exitFadeDuration="5000"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="5dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/story4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:backgroundTint="@color/blocks"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:enterFadeDuration="1000"
                    android:exitFadeDuration="5000"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="5dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/story5"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:backgroundTint="@color/blocks"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:enterFadeDuration="1000"
                    android:exitFadeDuration="5000"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="5dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/story6"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:backgroundTint="@color/blocks"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:enterFadeDuration="1000"
                    android:exitFadeDuration="5000"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="5dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/story7"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:backgroundTint="@color/blocks"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:enterFadeDuration="1000"
                    android:exitFadeDuration="5000"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="5dp" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/story8"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:backgroundTint="@color/blocks"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:enterFadeDuration="1000"
                    android:exitFadeDuration="5000"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="5dp" />
            </LinearLayout>




        </HorizontalScrollView>








        <TextView
            android:id="@+id/calorie_sum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/stoies"
            android:layout_marginTop="10dp"
            android:text="2024 калорий"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/white"
            tools:ignore="MissingConstraints">
        </TextView>

        <LinearLayout
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            app:circularflow_radiusInDP="15dp"
            android:background="@drawable/shape"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/calorie_sum">

            <!-- Измененные цвета для каждой части прогресс-бара -->
            <View
                android:id="@+id/protein_progress"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner_background" /> <!-- Красный цвет для белков -->

            <View
                android:id="@+id/fat_progress"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorFat" /> <!-- Желтый цвет для жиров -->

            <View
                android:id="@+id/carb_progress"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner_2"/> <!-- Зеленый цвет для углеводов -->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_for_protein_and_fat"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/progress_bar"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">



            <LinearLayout
                android:id="@+id/protein_layout"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                app:layout_constraintTop_toBottomOf="@+id/progress_bar"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/blocks"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="5dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/protein_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:text="Белки:"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"/>

                        <TextView
                            android:id="@+id/proteinValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="18dp"
                            app:layout_constraintTop_toBottomOf="@id/protein_text"
                            android:paddingLeft="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="г."
                            android:textColor="@color/white"
                            android:textSize="18dp"
                            app:layout_constraintTop_toTopOf="@id/proteinValue"
                            app:layout_constraintStart_toEndOf="@id/proteinValue"
                            android:layout_marginStart="5dp"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        app:cardCornerRadius="15dp"
                        android:backgroundTint="@color/protein"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fat_layout"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"

                >

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/blocks"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="5dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/fat_textt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:text="Жиры:">

                        </TextView>

                        <TextView
                            android:id="@+id/fatValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="18dp"
                            app:layout_constraintTop_toBottomOf="@id/fat_textt"
                            android:paddingLeft="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="г."
                            android:textColor="@color/white"
                            android:textSize="18dp"
                            app:layout_constraintTop_toTopOf="@id/fatValue"
                            app:layout_constraintStart_toEndOf="@id/fatValue"
                            android:layout_marginStart="5dp"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        app:cardCornerRadius="15dp"
                        android:backgroundTint="@color/fat"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        >

                    </androidx.cardview.widget.CardView>


                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/carb_layout"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"

                >

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/blocks"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="5dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/carb_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:text="Углеводы:">

                        </TextView>

                        <TextView
                            android:id="@+id/carbValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            app:layout_constraintTop_toBottomOf="@id/carb_text"
                            android:paddingLeft="10dp"
                            android:layout_gravity="center_vertical"

                            android:textSize="18dp">
                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="г."
                            android:textColor="@color/white"
                            android:textSize="18dp"
                            app:layout_constraintTop_toTopOf="@id/carbValue"
                            app:layout_constraintStart_toEndOf="@id/carbValue"
                            android:layout_marginStart="5dp"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        app:cardCornerRadius="15dp"
                        android:backgroundTint="@color/carb"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        >

                    </androidx.cardview.widget.CardView>


                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/breakfast_layout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/layout_for_protein_and_fat"
            android:layout_marginTop="5dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewBreakfast"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/blocks"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                android:foreground="?android:attr/selectableItemBackground"
                android:enterFadeDuration="1000"
                android:exitFadeDuration="5000"
                app:cardCornerRadius="15dp"
                android:layout_margin="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:text="Завтрак">

                </TextView>

                <TextView
                    android:id="@+id/sumCalorieBreakfast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="0 калорий"
                    android:layout_gravity="center_vertical"

                    android:textSize="18dp">

                </TextView>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <ImageView
                        android:id="@+id/buttonAddBreakfast"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icon_add"
                        android:layout_gravity="end"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginRight="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>



        </LinearLayout>


        <LinearLayout
            android:id="@+id/lunch_layout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/breakfast_layout"
            android:layout_marginTop="5dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewLunch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/blocks"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="15dp"
                android:layout_margin="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:text="Обед">

                </TextView>

                <TextView
                    android:id="@+id/sumCalorieLunch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="0 калорий"
                    android:layout_gravity="center_vertical"

                    android:textSize="18dp">

                </TextView>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/buttonAddLunch"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:scaleType="centerCrop"
                        android:layout_gravity="end"
                        android:src="@drawable/icon_add"
                        android:layout_marginRight="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dinner_layout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/lunch_layout"
            android:layout_marginTop="5dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewDinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/blocks"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="15dp"
                android:layout_margin="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:text="Ужин">

                </TextView>

                <TextView
                    android:id="@+id/sumCalorieDinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="0 калорий"
                    android:layout_gravity="center_vertical"

                    android:textSize="18dp">

                </TextView>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/buttonAddDinner"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icon_add"
                        android:layout_gravity="end"
                        android:layout_marginRight="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/snack_layout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/dinner_layout"
            android:layout_marginTop="5dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewSnack"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/blocks"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="15dp"
                android:layout_margin="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:text="Перекус/другое">

                </TextView>

                <TextView
                    android:id="@+id/sumCalorieSnack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="0 калорий"
                    android:layout_gravity="center_vertical"

                    android:textSize="18dp">

                </TextView>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/buttonAddSnack"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/icon_add"
                        android:scaleType="centerCrop"
                        android:layout_gravity="end"
                        android:layout_marginRight="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pustishka"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/snack_layout"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

        </LinearLayout>


        <View
            android:id="@+id/darkOverlayView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/dark_grey"
            android:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>