<!-- res/layout/item_breakfast_details.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/blocks"
        app:cardCornerRadius="15dp">

        <TextView
            android:id="@+id/textViewProductNameLunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textViewGramsLunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grams: "
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/textViewCaloriesLunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calories: "
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/textViewProteinLunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Protein: "
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/textViewFatLunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fat: "
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/textViewCarbohydrateLunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carbohydrate: "
            android:layout_marginBottom="4dp"/>

        <Button
            android:id="@+id/deleteButtonLunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:layout_below="@id/textViewProductNameLunch"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
</LinearLayout>
