<!-- res/layout/fragment_breakfast_details.xml -->
<androidx.core.widget.NestedScrollView
    android:id="@+id/nestedscrollview_breakfast_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.dashboard.ProductListFragment"
    android:background="@color/dark_grey"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:background="@color/dark_grey">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/constraint_border"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/buttonCloseBreakfastFragment"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/icon_back"
                    android:scaleType="centerCrop"

                    android:layout_marginLeft="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Завтрак: ваш рацион"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_marginRight="35dp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="8dp"
                    tools:ignore="MissingConstraints" />

            </LinearLayout>

            <TextView
                android:id="@+id/calBreakfast"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:textSize="40dp"
                android:text="0ккал"
                android:gravity="center"
                android:textColor="@color/white"
                tools:ignore="MissingConstraints">

            </TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <!-- Заменяем LinearLayout на RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewBreakfastDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

        </LinearLayout>

    </LinearLayout>


</androidx.core.widget.NestedScrollView>